<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="header_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="field_label">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="input_field">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:background">@drawable/form_field_background</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>

    <style name="primary_button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/primary_button_background</item>
    </style>

    <style name="secondary_button" parent="primary_button">
        <item name="android:backgroundTint">@color/secondary_button_background</item>
    </style>

    <style name="spinner_item">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>

    <style name="dialog_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>
</resources>